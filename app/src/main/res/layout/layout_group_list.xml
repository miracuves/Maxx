<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ConfigurationFragment">

    <include
        layout="@layout/layout_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Multi-select toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/multi_select_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:visibility="gone"
        app:title="@string/select_proxies"
        app:titleTextColor="?colorOnPrimary" />

    <!-- <include
        android:id="@+id/favorites_section_include"
        layout="@layout/layout_favorites_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" /> -->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/group_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:elevation="4dp"
        android:visibility="gone"
        app:tabIndicatorColor="?tabIndicatorColor"
        app:tabIndicatorFullWidth="false"
        app:tabMode="scrollable"
        app:tabPaddingStart="16dp"
        app:tabRippleColor="?tabRippleColor"
        app:tabSelectedTextColor="?tabSelectedTextColor"
        app:tabTextColor="?tabTextColor"
        app:tabUnboundedRipple="false" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/group_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>